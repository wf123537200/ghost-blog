{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    {{! set header}}
    <section class="u-nav">
        <div class="cover"></div>
        <ui>
            <li class="f-ml4p" style="min-width: 8rem"><a class="" title="2015年以前的CSDN blog欢迎交流" href="http://blog.csdn.net/wfsheep"  target="_blank">old blog</a></li>
            <li><a class="" title="一些作品" href="{{@blog.url}}/my">作品集</a></li>
            <li><a class="" title="分享ppt" href="{{@blog.url}}/ppt">ppt</a></li>
            <li><a class="" title="关于我 | {{@blog.title}}" href="{{@blog.url}}/node/about/about.html">关于</a></li>
        </ui>

        <footer>
            <a class="fa fa-github" href="https://github.com/wf123537200/" target="_blank"></a>
            <a class="fa fa-rss" href="{{@blog.url}}/rss/" target="_blank"></a>
        </footer>
    </section>

    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">下拉显示</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>